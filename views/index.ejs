<!DOCTYPE html>
<html>
    <head>
        <!-- Bootstrap -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <!-- Custom CSS -->
        <link type="text/css" rel="stylesheet" href="/css/index.css">
        <title>Calculator App</title>
    </head>
    <body>
        <header class="text-center mt-5">
            <h1>Calculator Application</h1>
        </header>

        <div class="container mt-5">
            <!-- Calculator Display -->
            <div class="row my-2 text-right justify-content-center">
                <div class="col-11 display">
                    <p class="m-0">Display Here</p>
                </div>
            </div>
            <!-- Operator Buttons -->
            <div class="row mt-2 text-center">
                <div class="col-3">
                    <button>+</button>
                </div>
                <div class="col-3">
                    <button>-</button>
                </div>
                <div class="col-3">
                    <button>*</button>
                </div>
                <div class="col-3">
                    <button>/</button>
                </div>
            </div>
            <div class="row text-center">
                <!-- Numbers -->
                <div class="col-9">
                    <div class="row my-2 text-center">
                        <div class="col-4">
                            <button>7</button>
                        </div>
                        <div class="col-4">
                            <button>8</button>
                        </div>
                        <div class="col-4">
                            <button>9</button>
                        </div>
                    </div>
                    <div class="row my-2 text-center">
                        <div class="col-4">
                            <button>4</button>
                        </div>
                        <div class="col-4">
                            <button>5</button>
                        </div>
                        <div class="col-4">
                            <button>6</button>
                        </div>
                    </div>
                    <div class="row my-2 text-center">
                        <div class="col-4">
                            <button>1</button>
                        </div>
                        <div class="col-4">
                            <button>2</button>
                        </div>
                        <div class="col-4">
                            <button>3</button>
                        </div>
                    </div>
                    <div class="row my-2 text-center">
                        <div class="col-4">
                            <button>0</button>
                        </div>
                        <div class="col-4">
                            <button>.</button>
                        </div>
                        <div class="col-4">
                            <button>C</button>
                        </div>
                    </div>
                </div>
                <!-- Equals Button -->
                <div class="col-3 my-2">
                    <button>=</button>
                </div>
            </div>
        </div>


        <script type="text/javascript" src="/js/index.js"></script>
    </body>
</html>